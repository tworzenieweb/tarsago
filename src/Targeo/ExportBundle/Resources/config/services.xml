<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="targeo_export.exporter.class">Targeo\ExportBundle\Manager\ExportManager</parameter>
        <parameter key="targeo_export.grid.class">Targeo\ExportBundle\Renderer\Grid</parameter>
        <parameter key="targeo_export.helper.class">Targeo\ExportBundle\Helper\GridHelper</parameter>
        <parameter key="targeo_export.output_factory.class">Targeo\ExportBundle\Model\OutputFactory</parameter>
    </parameters>

    
    <services>
        <service id="targeo_export.output_factory" class="%targeo_export.output_factory.class%" />
        <service id="targeo_export.exporter" class="%targeo_export.exporter.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="targeo_export.output_factory" />
            <argument type="service" id="validator" />
        </service>
        <service id="targeo_export.helper" class="%targeo_export.helper.class%">
            <argument type="service" id="templating" />
        </service>
        <service id="targeo_export.grid" class="%targeo_export.grid.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="targeo_export.helper" />
        </service>
    </services>
</container>
