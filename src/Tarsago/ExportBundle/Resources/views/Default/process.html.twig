{% extends "::base.html.twig" %}

{% block body %}

<form action="{{ path('tarsago_export_export', {id: export.id}) }}" method="POST" class="form-horizontal" data-redirect="{{ path('export_show', {id: export.id}) }}">
    <div class="form-group">
    {{ grid|raw }}
    </div>

    <div class="form-group">
        <div class="col-lg-12">
            <button type="submit" class="pull-right btn btn-primary">Exportuj</button>
            <a href="{{ path('tarsago_export_homepage') }}" class="pull-left btn btn-warning">Wgraj nowy plik</a>
        </div>
    </div>

</form>


<div class="modal fade" id="download" tabindex="-1" role="dialog" aria-labelledby="Pobieranie" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Potwierdzam pobranie !</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}